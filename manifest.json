{
  "manifest_version": 2,
  "name": "QuickBibTex",
  "version": "0.1.0",
  "author": "Vincent Ud√©n",
  "description": "Allows for directly exporting bibtex to your clipboard on sciencedirect.com",
  "permissions": [
    "https://*/*",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.sciencedirect.com/science/article/pii/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "index.html"
  }
}
